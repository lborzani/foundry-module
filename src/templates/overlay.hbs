<div id="foundry-module-overlay" class="foundry-module-overlay">
    <div class="hud-container">
        <div class="hud-header">
            <h3>HUD</h3>
            <a class="hud-lock"><i class="fas fa-lock-open"></i></a>
        </div>
        <div class="hud-content">
            <div id="hud-actor-info" class="hidden">
                <h4 id="hud-actor-name">--</h4>
                <div class="stats-grid">
                    <div class="stat-box">
                        <span class="label">HP</span>
                        <span class="value" id="hud-actor-hp">0/0</span>
                    </div>
                    <div class="stat-box">
                        <span class="label">AC</span>
                        <span class="value" id="hud-actor-ac">0</span>
                    </div>
                </div>

                <div class="rune-system">
                    <div class="ether-header">
                        <span class="label">Ether Cap</span>
                        <span class="value" id="hud-ether-text">0 / 0</span>
                    </div>
                    <div class="ether-bar-container">
                        <div class="ether-bar-fill" id="hud-ether-bar" style="width: 0%"></div>
                    </div>
                    <button id="hud-btn-purge" class="purge-btn" title="Purge Cache">
                        <i class="fas fa-fan"></i> Purgar Cache
                    </button>
                </div>
            </div>
            <p id="hud-no-selection">Nenhum token selecionado</p>
        </div>
    </div>
</div>
